  "license": "Apache-2.0",
  "devDependencies": {
    "@grafana/data": "latest",
    "@grafana/toolkit": "latest"
  },
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "@grafana/ui": "^8.2.0"
  }
}
